  url = {http://link.springer.com/article/10.1007/s00190-013-0636-1},
  journal = {Journal of Geodesy},
  author = {Grombein, Thomas and Seitz, Kurt and Heck, Bernhard},
  month = jul,
  year = {2013},
  keywords = {Earth Sciences; general,Forward modeling,Geophysics/Geodesy,Gravitational field,Newton’s integral,Tesseroid},
  pages = {645--660},
  file = {grombein2013.pdf:/home/leo/Dropbox/bib/pdf/grombein2013.pdf:application/pdf}
}

